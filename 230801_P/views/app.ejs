<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <h1>실습2. axios post 로그인</h1>
    <form name="login">
      <fieldset>
        <legend>로그인</legend>
        <label for="id">아이디</label>
        <input type="text" name="id" id="id" required />
        <br />
        <label for="pw">패스워드</label>
        <input type="password" name="pw" id="pw" required />
      </fieldset>
    </form>
    <div class="result"></div>
    <button type="button" onclick="axiosPost()">로그인</button>
    <script>
      const resultBox = document.querySelector(".result");
      function axiosPost() {
        console.log("axios post");
        const data = {
          id: document.querySelector("#id").value,
          pw: document.querySelector("#pw").vlaue,
        };
        console.log(data);
        axios({
          method: "post",
          url: "/resultPost",
          data,
        }).then((res) => {
          console.log(res);
          const { result, userInfo } = res.data;
          if (result) {
            resultBox.textContent = `${userInfo.id}님 환영합니다!`;
            resultBox.style.color = "blue";
          } else {
            resultBox.textContent = "아이디, 비밀번호가 틀렸습니다.";
            resultBox.style.color = "red";
          }
        });
      }
    </script>
  </body>
</html>
